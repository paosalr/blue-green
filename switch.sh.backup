#!/bin/bash
set -e

GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

if [ -z "$1" ]; then
    echo -e "${RED}✗ Error: Debes especificar el entorno${NC}"
    echo "Uso: ./switch.sh [blue|green]"
    exit 1
fi

ENV=$(echo "$1" | tr '[:upper:]' '[:lower:]')

if [ "$ENV" != "blue" ] && [ "$ENV" != "green" ]; then
    echo -e "${RED}✗ Error: Entorno inválido${NC}"
    echo "Usa: blue o green"
    exit 1
fi

echo -e "${YELLOW}⚙️  Cambiando a entorno $ENV...${NC}"

# Crear archivo temporal y copiarlo
TEMP_CONF="/tmp/nginx-${ENV}.conf"

cat > "$TEMP_CONF" << 'EOFNGINX'
worker_processes auto;
error_log /var/log/nginx/error.log warn;

events {
    worker_connections 1024;
}

http {
    upstream backend {
        server ENV_PLACEHOLDER-environment:80;
    }

    server {
        listen 80;
        server_name localhost;

        location / {
            proxy_pass http://backend;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }
}
EOFNGINX

# Reemplazar placeholder
sed -i.bak "s/ENV_PLACEHOLDER/${ENV}/g" "$TEMP_CONF"

# Copiar al contenedor usando un método más robusto
echo -e "${YELLOW} Actualizando configuración...${NC}"
docker exec nginx-proxy sh -c "cat > /tmp/nginx.conf" < "$TEMP_CONF"
docker exec nginx-proxy sh -c "mv /tmp/nginx.conf /etc/nginx/nginx.conf"

# Verificar configuración
echo -e "${YELLOW} Verificando configuración...${NC}"
if docker exec nginx-proxy nginx -t 2>/dev/null; then
    echo -e "${GREEN}✓ Configuración válida${NC}"
else
    echo -e "${RED}✗ Error en la configuración${NC}"
    rm -f "$TEMP_CONF" "$TEMP_CONF.bak"
    exit 1
fi

# Recargar Nginx
echo -e "${YELLOW} Recargando Nginx...${NC}"
docker exec nginx-proxy nginx -s reload

# Actualizar archivo local
cp "$TEMP_CONF" nginx.conf

# Limpiar
rm -f "$TEMP_CONF" "$TEMP_CONF.bak"

# Esperar un momento para que el cambio se aplique
sleep 2

echo ""
echo -e "${GREEN}✓ Cambio exitoso a $ENV!${NC}"
echo ""
echo -e "${BLUE} URLs de acceso:${NC}"
echo "  Nginx Proxy: http://localhost"
echo "  Blue directo: http://localhost:8081"
echo "  Green directo: http://localhost:8082"
echo ""
echo -e "${YELLOW} Verifica el cambio:${NC}"
echo "  curl http://localhost"
echo ""